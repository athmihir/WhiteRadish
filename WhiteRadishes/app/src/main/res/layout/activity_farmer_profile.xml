<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".FarmerProfile">

    <ImageView
        android:id="@+id/desc1"
        android:layout_width="359dp"
        android:layout_height="422dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:srcCompat="@drawable/arecttab3" />

    <ImageView
        android:id="@+id/desc2"
        android:layout_width="377dp"
        android:layout_height="252dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ar5" />

    <ImageView
        android:id="@+id/imgprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029"
        app:srcCompat="@drawable/farmer_logo" />

    <TextView
        android:id="@+id/profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/imgprofile"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/profilelocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/profilename"
        app:layout_constraintVertical_bias="0.044" />

    <TextView
        android:id="@+id/locval"
        android:layout_width="86dp"
        android:layout_height="23dp"
        android:text=""
        android:textSize="13sp"

        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.787"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/profilename"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/contactval"
        android:layout_width="88dp"
        android:layout_height="23dp"
        android:text=""
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.793"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/profilename"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/ratingval"
        android:layout_width="78dp"
        android:layout_height="27dp"
        android:text=""
        android:textSize="13sp"

        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/profilename"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/orderval"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:text=""
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/profilename"
        app:layout_constraintVertical_bias="0.585" />

    <TextView
        android:id="@+id/profilecontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/profilelocation"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/profilerating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratings :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/profilecontact"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:id="@+id/profileorders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Orders :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/desc1"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="@+id/desc1"
        app:layout_constraintTop_toBottomOf="@+id/profilerating"
        app:layout_constraintVertical_bias="0.152" />

    <ImageButton
        android:id="@+id/btnInventory"
        android:layout_width="164dp"
        android:layout_height="199dp"
        android:layout_marginStart="3dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/desc2"
        app:layout_constraintEnd_toEndOf="@+id/desc2"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="@+id/desc2"
        app:layout_constraintTop_toTopOf="@+id/desc2"
        app:layout_constraintVertical_bias="0.528"
        app:srcCompat="@drawable/ainventory" />

    <ImageButton
        android:id="@+id/btnorders"
        android:layout_width="162dp"
        android:layout_height="218dp"
        android:layout_marginEnd="6dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/desc2"
        app:layout_constraintEnd_toEndOf="@+id/desc2"
        app:layout_constraintHorizontal_bias="0.233"
        app:layout_constraintStart_toEndOf="@+id/btnInventory"
        app:layout_constraintTop_toTopOf="@+id/desc2"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@drawable/ainventory2" />

    <ImageButton
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/offwhite"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_exit" />

    <ImageButton
        android:id="@+id/editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/desc1"
        app:layout_constraintTop_toTopOf="@+id/desc1"
        app:srcCompat="@drawable/ic_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>